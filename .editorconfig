# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.sh]
shell_variant = bash
switch_case_indent = true
space_redirects = true

[*.{py,ini}]
max_line_length = 119

[*.{css,html,js,json,less,scss,yml,yaml}]
indent_size = 2
max_line_length = 119

[Makefile]
indent_style = tab

[node_modules/**]
ignore = true

[venv/**]
ignore = true

[.tox/**]
ignore = true
